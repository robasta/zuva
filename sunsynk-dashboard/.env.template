# Sunsynk Solar Dashboard Configuration Template
# Copy this file to .env and update with your actual credentials

# Sunsynk API Credentials
SUNSYNK_USERNAME=your_sunsynk_username
SUNSYNK_PASSWORD=your_sunsynk_password

# Weather API Configuration
WEATHER_API_KEY=your_openweather_api_key
LOCATION=Cape Town,ZA

# InfluxDB Configuration
INFLUXDB_ADMIN_PASSWORD=sunsynkadmin
INFLUXDB_ADMIN_TOKEN=sunsynk-admin-token
INFLUXDB_ORG=sunsynk
INFLUXDB_BUCKET=solar_data

# Data Collection Settings
COLLECTION_INTERVAL=30  # seconds
ANALYSIS_INTERVAL=300   # seconds (5 minutes)

# Dashboard API Configuration
API_HOST=0.0.0.0
API_PORT=8000
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000

# Notification Services
# Twilio (WhatsApp, SMS, Voice Calls)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Phone Numbers for Notifications
WHATSAPP_FROM=+1234567890
SMS_TO=+1234567890
VOICE_TO=+1234567890

# Firebase Cloud Messaging (Push Notifications)
FCM_API_KEY=your_fcm_api_key

# Email Notifications
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=recipient@gmail.com

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=admin

# System Configuration
LOG_LEVEL=INFO

# Analytics Configuration
CONSUMPTION_THRESHOLD=2.5  # kW warning threshold
BATTERY_MIN_SOC=15         # Minimum battery level %
GEYSER_POWER_RATING=3.0    # kW rating of geyser
ANALYSIS_RETENTION_DAYS=365 # Days to keep detailed analysis