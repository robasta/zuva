# Sunsynk Solar Dashboard - Environment Configuration
# Copy this file to .env and fill in your actual values

# ===== REQUIRED: Sunsynk API Credentials =====
SUNSYNK_USERNAME=your_sunsynk_email@domain.com
SUNSYNK_PASSWORD=your_sunsynk_password

# ===== REQUIRED: Weather API =====
OPENWEATHER_API_KEY=your_openweather_api_key
LOCATION=Randburg,ZA

# ===== REQUIRED: Database Configuration =====
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your_influxdb_admin_token
INFLUXDB_ORG=sunsynk
INFLUXDB_BUCKET=solar_metrics

# ===== REQUIRED: Security =====
JWT_SECRET_KEY=generate_a_secure_random_key_here

# ===== OPTIONAL: Data Source Control =====
# Set to 'true' to force using only mock data for testing
USE_MOCK_DATA=false

# Set to 'true' to disable mock data fallback (strict real data only)
# When enabled, API will return errors instead of mock data if real data fails
DISABLE_MOCK_FALLBACK=false

# ===== OPTIONAL: CORS Configuration =====
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:3002,http://localhost:3003

# ===== OPTIONAL: Logging =====
LOG_LEVEL=INFO
